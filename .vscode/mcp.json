// The server will be started with the latest version of the Supabase MCP server package.
// The server will use environment variables for authentication (SUPABASE_ACCESS_TOKEN, SUPABASE_PROJECT_REF).
{
  "servers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "next-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "next-devtools-mcp@latest"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${env:CONTEXT7_API_KEY}"
      }
    },
    "supabase": {
      "type": "http",
      "url": "https://mcp.supabase.com/mcp",
      "headers": {
        "Authorization": "Bearer ${env:SUPABASE_ACCESS_TOKEN}",
        "Content-Type": "application/json"
      }
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest"
      ]
    },
    "gemini-design-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "gemini-design-mcp@latest"
      ],
      "env": {
        "API_KEY": "${env:API_KEY}"
      }
    }
  }
}